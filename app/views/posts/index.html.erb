<p id="notice"><%= notice %></p>
<%= render_breadcrumbs separator:  '>' %>

<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Price</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= attachment_image_tag post.post_images[0], :image, :fill, 100, 100, format: "jpg" %>
        <td><%= post.price %>円</td>
        <td><%= post.description %></td>

        <td><% post.category_list.each do |category| %>
            <%= link_to category, search_path(category)%>
        <% end %></td>

        <!-- 下記のものが当初、作成していたリンク付きのタグ。paramsがうまく飛ばせなかった -->
        <td><%#= link_to render 'post/tag_list', tag_list: post.category_list posts_search_path%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @page %>
<br>

<%= render_breadcrumbs separator:  '>' %>
<%= link_to 'New Post', new_post_path %>
